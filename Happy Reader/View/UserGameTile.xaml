<UserControl x:Class="Happy_Reader.View.UserGameTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:database="clr-namespace:Happy_Reader.Database"
             mc:Ignorable="d" d:DesignHeight="220" d:DesignWidth="160">
    <UserControl.DataContext>
        <database:UserGame/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style x:Key="ToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="IsEnabled" Value="False"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Name="Border" BorderBrush="Black" BorderThickness="2" Background="Red" CornerRadius="0,0,5,0">
                            <Viewbox>
                                <TextBlock Name="TextBlock" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="OFF"></TextBlock>
                            </Viewbox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" TargetName="Border" Value="LimeGreen"/>
                                <Setter Property="Text" TargetName="TextBlock" Value="ON"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Background="Salmon" CornerRadius="10">
        <Grid Width="160" Height="220">
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Border Name="Mask" Background="Salmon" CornerRadius="10"/>
            <Grid Grid.Row="0">
                <Grid.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=Mask}"/>
                </Grid.OpacityMask>
                <Image Source="{Binding Image}" />
            </Grid>
            <Viewbox Grid.Row="1">
                <TextBlock Text="{Binding DisplayName}"  VerticalAlignment="Center" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
            </Viewbox>
            <Viewbox Grid.Row="2" Margin="0,0,48,0">
                <TextBlock Text="{Binding TimeOpen, StringFormat=hh\':\'mm}"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Viewbox>
            <ToggleButton Margin="112,5,0,0" Grid.Row="2" Style="{StaticResource ToggleButtonStyle}" IsChecked="{Binding IsRunning, Mode=OneWay}"/>
        </Grid>
    </Border>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="See Details" Click="GameDetails"></MenuItem>
            <MenuItem Header="Browse To Location" Click="BrowseToLocation"></MenuItem>
            <MenuItem Header="Launch with ITHVNR" Click="LaunchWithIth"></MenuItem>
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>

