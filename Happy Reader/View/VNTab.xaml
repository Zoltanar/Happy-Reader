<UserControl x:Class="Happy_Reader.View.VNTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Happy_Reader.ViewModel"
             xmlns:view="clr-namespace:Happy_Reader.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" d:DataContext="{d:DesignInstance viewModel:VNTabViewModel}" Loaded="VNTab_OnLoaded">
    <Grid Background="#FFC9E1F5">
        <ListBox x:Name="VisualNovelItems" Margin="10,10,10,70" ItemsSource="{Binding ListedVNs}" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                 ScrollViewer.ScrollChanged="ScrollViewer_OnScrollChanged"
                 VirtualizingStackPanel.VirtualizationMode="Recycling" 
                 MouseDoubleClick="VNTileDoubleClicked">
            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="VerticalContentAlignment" Value="Top" />
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Padding" Value="0,5" />
                </Style>
            </ListBox.Resources>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="VerticalContentAlignment" Value="Top" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <view:VirtualizingWrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        <Label Content="{Binding ListedVNs.Count}" ContentStringFormat="Items: {0}" Margin="0,0,10,35" Height="30" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="109" Padding="0,5"/>
        <Label Content="{Binding CSettings.URTDate}" ContentStringFormat="Last URT Update: {0}" HorizontalAlignment="Left" Margin="10,0,0,0" Height="30" VerticalAlignment="Bottom" VerticalContentAlignment="Center" Width="251"/>
        <Button Content="Update URT" HorizontalAlignment="Left" Margin="605,0,0,35" Width="71" Click="UpdateURT" Height="30" VerticalAlignment="Bottom"/>
        <Label Foreground="{Binding VndbConnectionColor}" Content="{Binding VndbConnectionReply}" Margin="411,0,10,0" Height="30" VerticalAlignment="Bottom" VerticalContentAlignment="Center"/>
        <Label Content="Search:" HorizontalAlignment="Left" Margin="10,0,0,35" Height="30" VerticalAlignment="Bottom" VerticalContentAlignment="Center"/>
        <TextBox x:Name="SearchTexBox" HorizontalAlignment="Left" Margin="63,0,0,36" TextWrapping="Wrap" Width="198" Padding="5" VerticalContentAlignment="Center" PreviewKeyUp="SearchForVN" Height="29" VerticalAlignment="Bottom"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="266,0,0,35" Width="43" Click="ShowAll" Height="30" VerticalAlignment="Bottom"/>
        <Button Content="Show URT" HorizontalAlignment="Left" Margin="314,0,0,35" Width="59" Click="ShowURT" Height="30" VerticalAlignment="Bottom"/>
        <Button Content="Preset 2" HorizontalAlignment="Left" Margin="378,0,0,35" Width="46" Click="Preset2" Height="30" VerticalAlignment="Bottom"/>
        <Button Content="Update for Year" HorizontalAlignment="Left" Margin="429,0,0,35" Width="87" Click="UpdateForYear" Height="30" VerticalAlignment="Bottom"/>
        <Button Content="Fetch for Year" HorizontalAlignment="Left" Margin="521,0,0,35" Width="79" Click="FetchForYear" Height="30" VerticalAlignment="Bottom"/>
        <Button Content="Fetch Characters for Year" HorizontalAlignment="Left" Margin="266,0,0,0" Width="140" Click="UpdateCharactersForYear" Height="30" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
