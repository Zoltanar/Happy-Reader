<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Happy_Reader"
        x:Class="Happy_Reader.MainWindow"
        mc:Ignorable="d"
        Title="Happy Reader" Height="474.699" Width="739.692" Loaded="Window_Loaded" Closing="Window_Closing">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid Background="#FF2E4876">
        <TabControl x:Name="MainTabControl" Margin="10">
            <TabItem Header="Games" >
                <Grid Background="#FFC9E1F5" AllowDrop="True" Drop="DropFileOnGamesTab">
                    <ListBox x:Name="GameFiles"  Margin="10,10,10,53" MouseDoubleClick="GameFiles_MouseDoubleClick" ItemsSource="{Binding UserGameItems}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                    <Button Content="Debug"  Click="Debug_Button"  HorizontalAlignment="Left" Margin="10,0,0,10" Width="49" Height="38" VerticalAlignment="Bottom"/>
                    <Label x:Name="GameResponseLabel" Content="{Binding StatusText}" Margin="245,0,10,10" Height="38" VerticalAlignment="Bottom" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Button Content="Remove"  Click="RemoveUserGame"  HorizontalAlignment="Left" Margin="64,0,0,10" Width="48" Height="38" VerticalAlignment="Bottom"/>
                    <CheckBox Content="Capture Clipboard" HorizontalAlignment="Left" Margin="117,0,0,10" Width="123" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="38" VerticalAlignment="Bottom"  IsChecked="{Binding CaptureClipboard}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Entries">
                <Grid>
                    <CheckBox Content="Game-only" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="{Binding OnlyGameEntries, Mode=TwoWay}"/>
                    <Button Content="Add Entry" Margin="83,0,0,0" VerticalAlignment="Top" Click="AddEntry_Click" HorizontalAlignment="Left" Width="90"/>
                    <DataGrid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding EntriesList}" Margin="0,25,0,0" />
                </Grid>
            </TabItem>
            <TabItem Header="Test">
                <Grid>
                    <!--<Label Content="Original Text" Margin="10,10,957,281" HorizontalAlignment="Left" VerticalAlignment="Top"/>-->
                    <Label Content="Original Text" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" Text="{Binding Tester.OriginalText}" Width="120" AcceptsReturn="True" AcceptsTab="True" Height="96" VerticalAlignment="Top"/>
                    <Label Content="Stage 1" Margin="135,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="135,45,0,0" TextWrapping="Wrap" Text="{Binding Tester.Stage1}" Width="120" AcceptsReturn="True" AcceptsTab="True" Height="96" VerticalAlignment="Top"/>
                    <Label Content="Stage 2" Margin="260,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="260,45,0,0" TextWrapping="Wrap" Text="{Binding Tester.Stage2}" Width="120" AcceptsReturn="True" AcceptsTab="True" Height="96" VerticalAlignment="Top"/>
                    <Label Content="Stage 3" Margin="385,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="385,45,0,0" TextWrapping="Wrap" Text="{Binding Tester.Stage3}" Width="120" AcceptsReturn="True" AcceptsTab="True" Height="96" VerticalAlignment="Top"/>
                    <Label Content="Stage 4" Margin="10,146,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="10,181,0,0" TextWrapping="Wrap" Text="{Binding Tester.Stage4}" Width="120" AcceptsReturn="True" AcceptsTab="True" Height="96" VerticalAlignment="Top"/>
                    <Label Content="Stage 5" Margin="135,146,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="135,181,0,0" TextWrapping="Wrap" Text="{Binding Tester.Stage5}" Width="120" AcceptsReturn="True" AcceptsTab="True" Height="96" VerticalAlignment="Top"/>
                    <Label Content="Stage 6" Margin="260,146,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="260,181,0,0" TextWrapping="Wrap" Text="{Binding Tester.Stage6}" Width="120" AcceptsReturn="True" AcceptsTab="True" Height="96" VerticalAlignment="Top"/>
                    <Label Content="Stage 7" Margin="385,146,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="385,181,0,0" TextWrapping="Wrap" Text="{Binding Tester.Stage7}" Width="120" AcceptsReturn="True" AcceptsTab="True" Height="96" VerticalAlignment="Top"/>
                    <Button Content="Test" Margin="10,282,393,10" Click="TestTranslationClick"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
